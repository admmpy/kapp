# Database
DATABASE_URL=sqlite:///data/korean_learning.db

# TTS Configuration
TTS_CACHE_DIR=data/audio_cache

# Flask Configuration
FLASK_ENV=development
FLASK_DEBUG=True
# REQUIRED: Generate with: python -c "import secrets; print(secrets.token_hex(32))"
SECRET_KEY=your-generated-secret-key-here

# CORS - Comma-separated origins (include both possible frontend ports)
CORS_ORIGINS=http://localhost:5173,http://localhost:5174

# LLM Configuration (OpenAI-compatible, defaulting to OpenRouter + DeepSeek)
# Set either OPENAI_API_KEY or OPENROUTER_API_KEY
OPENROUTER_API_KEY=your-openrouter-api-key-here
OPENAI_MODEL=deepseek/deepseek-v3.2
OPENAI_BASE_URL=https://openrouter.ai/api/v1
LLM_CACHE_DIR=data/llm_cache
LLM_ENABLED=false

# Rate Limiting
RATELIMIT_ENABLED=true
RATELIMIT_DEFAULT=200/day
RATELIMIT_LLM=10/hour
